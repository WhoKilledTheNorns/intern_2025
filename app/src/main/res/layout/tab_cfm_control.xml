<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@drawable/bg3">

    <!-- 左侧大图按钮 -->

    <!-- 右侧整体区域 -->



    <!-- 左侧大图按钮 -->

    <!-- 右侧整体区域 -->

    <ImageButton
        android:id="@+id/btnBigImage"
        android:layout_width="80mm"
        android:layout_height="60mm"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20mm"
        android:layout_marginTop="30mm"
        android:adjustViewBounds="true"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/mode_auto" />

    <LinearLayout
        android:id="@+id/rightPanel"
        android:layout_width="449dp"
        android:layout_height="479dp"
        android:layout_marginStart="18mm"
        android:layout_marginTop="7.5mm"
        android:layout_toEndOf="@id/btnBigImage"
        android:gravity="center"
        android:orientation="vertical">

        <!-- 一行：两个文本 + 按钮 -->
        <LinearLayout
            android:layout_width="319dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="7.5mm"
            android:layout_marginStart="5mm"
            android:gravity="left|center"
            android:orientation="horizontal">

            <!-- 左边：文本 + 按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="0mm"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvAngle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="-9mm"
                    android:fontFamily="@font/msyh"
                    android:text=" "
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnAngle"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/light_off"
                    android:scaleType="centerCrop" />
            </LinearLayout>

            <!-- 右边：文本 + 按钮 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginEnd="30dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvConc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10mm"
                    android:layout_marginTop="0mm"
                    android:fontFamily="@font/msyh"
                    android:text=" "
                    android:textColor="#FFFFFF"
                    android:textSize="24dp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnConc"
                    android:layout_width="130dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="80dp"
                    android:background="@drawable/fan_off"
                    android:scaleType="centerCrop" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>